<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wxblog.core.dao.CategoryMapper">

    <select id="selectByUserId" parameterType="long" resultType="Category">
        SELECT * FROM blog_user_category
        WHERE user_id=#{userId}
        ORDER BY sort ASC
    </select>
    
    <select id="maxSort" resultType="integer">
        SELECT max(sort) FROM blog_user_category
    </select>
</mapper>